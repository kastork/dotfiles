#! /usr/bin/env zsh

wd=`pwd`
svn=${wd:0:7}
d=${wd:7}
raid_loc="synology-raid:/volume1/homes/${d}"

if [[ $svn == '/Users/' ]]
    then
        echo $raid_loc
        rsync -avF --delete . ${raid_loc}
    else
        echo "This command is only useable from directories rooted at /Users"
        exit 1
fi